{
	"name": "migrate-barrel-imports",
	"version": "0.0.0",
	"description": "A CLI tool to migrate barrel imports in JavaScript/TypeScript monorepos",
	"files": [
		"dist/"
	],
	"main": "./dist/index.js",
	"targets": {
		"main": {
			"optimize": true
		}
	},
	"keywords": [
		"typescript",
		"javascript",
		"monorepo",
		"cli",
		"tool",
		"migrate",
		"barrel",
		"import",
		"imports"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/brandhaug/migrate-barrel-imports.git"
	},
	"bugs": {
		"url": "https://github.com/brandhaug/migrate-barrel-imports/issues"
	},
	"homepage": "https://github.com/brandhaug/migrate-barrel-imports#readme",
	"type": "module",
	"bin": {
		"migrate-barrel-imports": "dist/index.js"
	},
	"scripts": {
		"build": "parcel build src/index.ts --no-source-maps",
		"start": "node dist/index.js",
		"lint": "biome lint",
		"check-write": "biome check --write",
		"typecheck": "tsc",
		"prepare": "husky",
		"test": "vitest",
		"validate": "npm run lint && npm run typecheck && npm run test"
	},
	"dependencies": {
		"@babel/generator": "7.28.0",
		"@babel/parser": "7.28.0",
		"@babel/traverse": "7.28.0",
		"@babel/types": "7.28.2",
		"commander": "14.0.0",
		"fast-glob": "3.3.3",
		"micromatch": "4.0.8",
		"ts-morph": "26.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@semantic-release/changelog": "6.0.3",
		"@types/babel__generator": "7.27.0",
		"@types/babel__traverse": "7.28.0",
		"@types/micromatch": "4.0.9",
		"execa": "9.6.0",
		"husky": "9.1.7",
		"lint-staged": "16.1.5",
		"parcel": "2.15.4",
		"semantic-release": "24.2.7",
		"tsc-files": "1.1.4",
		"tsx": "4.20.3",
		"typescript": "5.9.2",
		"vitest": "3.2.4"
	},
	"author": "Martin Brandhaug",
	"license": "MIT",
	"lint-staged": {
		"*.{ts,json}": [
			"biome check --write"
		],
		"*.ts": [
			"tsc-files"
		]
	},
	"engines": {
		"node": ">=20"
	}
}
